   <% book.book_comments.each do |book_comment| %>
    <div class="comment">
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <a href="#" class="link-author"><%= book_comment.user.name %></a>
            <span class="comment-meta">
              <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
            </span>
          </div>
          <div class="comment-entry"><%= book_comment.comment %></div>
          <% if book_comment.user == current_user %>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>